{% extends "::layout.html.twig" %}

{% block title %} Médiathèque {% endblock %}

{% block body_container %}

<div class="row">
  <div class="col-xs-12">
    <h3>Ma médiathèque</h3>
  </div>
</div>

<div class="row">

  <div class="col-xs-12 col-sm-4 col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Enregistré un fichier</h3>
      </div>
      <div class="panel-body">
        {{form(form)}}
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-8 col-md-9">
    <div class="row">
      {% if medias is empty %}
        <div class="col-xs-12">
          <div class="alert alert-info">
            Vous n'avez pas encore enregistré de fichier.
          </div>
        </div>
      {% else %}
        <div class="col-xs-12">
          <form class="form-inline" method="get">
            <div class="checkbox">
              <label>
                <input type="checkbox" name="image" value="true" {{ "image" in filters|keys ? 'checked' : '' }}> Images
              </label>
            </div>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="pdf" value="true" {{ "pdf" in filters|keys ? 'checked' : '' }}> PDF
              </label>
            </div>
            <button type="submit" class="btn btn-default">Filtrer</button>
          </form>
          <hr />
        </div>
        <div class="col-xs-12">
          <table class="table">
            <thead>
              <tr>
                <th>Nom du fichier</th>
                <th>Type</th>
                <th>Taille (kB)</th>
                <th>Ajouté le</th>
              </tr>
            </thead>
            <tbody>
              {% for media in medias %}
                <tr>
                  <td>{{media.name}}</td>
                  <td>{{media.contentType|upper}}</td>
                  <td>{{media.size}}</td>
                  <td>{{media.createdAt|date('d/m/Y')}}</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}
    </div>
  </div>

</div>

{% endblock %}
