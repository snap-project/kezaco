{% extends "::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body_container %}

<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <div class="row">
        <div class="col-xs-12 col-md-2">

        </div>
        <div class="col-xs-12 col-md-10">
          <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
            {{ form_widget(form) }}
            <div>
              <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-xs-2">
      <a href="{{path('fos_user_profile_show')}}" class="btn btn-default btn-block">
        <i class="fa fa-edit fa-fw"></i> {{ 'buttons.cancel'|trans({}, 'KezacoCoreBundle') }}
      </a>
    </div>
  </div>
</div>

{% endblock %}
