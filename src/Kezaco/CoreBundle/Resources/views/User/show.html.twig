{% extends "::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body_container %}
<div class="header-area">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="title-page">
          <h1>Mon profile</h3>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-10">
      <div class="row">
        <div class="col-xs-12 col-md-2">
          <img src="https://gravatar.com/avatar/{{user.email|gravatar(128)}}" alt="" />
        </div>
        <div class="col-xs-12 col-md-10">
          <ul class="list-unstyled">
            <li class="user-profile-username"><strong>{{user.username}}</strong></li>
            <li>{{user.email}}</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-xs-2">
      <a href="{{path('fos_user_profile_edit')}}" class="btn btn-default btn-block">
        <i class="fa fa-edit fa-fw"></i> {{ 'buttons.edit'|trans({}, 'KezacoCoreBundle') }}
      </a>
    </div>
  </div>
</div>
{% endblock %}
