<!DOCTYPE html>
<html>
  <head>
      {% block head %}
        {% block head_meta %}
          <meta charset="utf8">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}
        <title>{% block head_title %}Kezaco{% endblock %}</title>
        {% block head_style %}
          {% stylesheets
            '@bootstrap_css'
          %}
            <link href="{{ asset_url }}" rel="stylesheet" media="screen">
          {% endstylesheets %}
        {% endblock %}
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
      {% endblock %}
  </head>
  <body>
      {% block body %}
      {% block body_navbar %}
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="{{ path('kezaco_home') }}">
                <img alt="Brand" src="{{ asset('bundles/kezacocore/img/logo.svg') }}" style="max-height: 25px">
              </a>
            </div>
            <ul class="nav navbar-nav navbar-right">
              {% if app.user %}
                <li><a href="{{ path('fos_user_security_logout') }}" class="navbar-link">Logout</a></li>
              {% else %}
                <li><a href="{{ path('fos_user_security_login') }}" class="navbar-link">Login</a></li>
              {% endif %}
            </ul>
          </div>
        </nav>
      {% endblock %}
        <div class="container-fluid">
          {{ block('body_container') }}
        </div>
        {% block body_script %}
          {% javascripts
            '@jquery'
            '@bootstrap_js'
          %}
            <script src="{{ asset_url }}"></script>
          {% endjavascripts %}
        {% endblock %}
      {% endblock %}
  </body>
</html>
