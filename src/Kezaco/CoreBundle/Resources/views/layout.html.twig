<!DOCTYPE html>
<html>
  <head>
      {% block head %}
        {% block head_meta %}
          <meta charset="utf8">
          <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% endblock %}
        <title>{% block head_title %}Kezaco{% endblock %}</title>
        {% block head_style %}
          {% stylesheets
            '@bootstrap_css'
          %}
            <link href="{{ asset_url }}" rel="stylesheet" media="screen">
          {% endstylesheets %}
        {% endblock %}
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}
      {% endblock %}
  </head>
  <body>
      {% block body %}
        <div class="container-fluid">
          {{ block('body_container') }}
        </div>
        {% block body_script %}
          {% javascripts
            '@jquery'
            '@bootstrap_js'
          %}
            <script src="{{ asset_url }}"></script>
          {% endjavascripts %}
        {% endblock %}
      {% endblock %}
  </body>
</html>
